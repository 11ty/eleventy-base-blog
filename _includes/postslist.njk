<ol reversed class="postlist">
	{% for post in postslist | reverse %}
		<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}{% if post.data.emoji %}" data-emoji="{{ post.data.emoji }}{% endif %}" style="--item-index: {{ loop.index }};">
			<a href="{{ post.url }}" class="postlist-link">
				{% if post.data.title %}{{ post.data.title }}
				{% else %}
					<code>{{ post.url }}</code>
				{% endif %}
			</a>
			<time class="postlist-date" datetime="{{ post.date | htmlDateString }}" data-tooltip="{{ post.data.description }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		</li>
	{% endfor %}
</ol>