<amp-story-page id="{{ month.id }}">
  <amp-story-grid-layer template="fill">
    {% if month.image %}
      <amp-img src="{{ month.image.src }}"
          width="{{ month.image.width }}" height="{{ month.image.height }}"
          layout="responsive">
      </amp-img>
    {% endif %}
    {% if month.video %}
      <amp-video src="{{ month.video.src }}"
          width="{{ month.video.width }}" height="{{ month.video.height }}"
          layout="responsive"
          poster="https://cdn.glitch.com/c88340c0-ab92-4979-a135-2e1a71e72e48%2Fmalte-cover.jpg?1557873653594"
          loop muted autoplay noaudio>
      </amp-video>
    {% endif %}
  </amp-story-grid-layer>
  <amp-story-grid-layer template="vertical">
    <h1{%if month.titleClass%} class="{{month.titleClass}}"{%endif%}>{{ month.title }}</h1>
  </amp-story-grid-layer>
</amp-story-page>

{% for page in month.pages %}
  <amp-story-page id="{{ page.id or "id" + page.tweet }}" {%if page.class%}class="{{page.class}}"{%endif%}>
    <amp-story-grid-layer template="vertical">
      {% if page.title %}
        <h2{%if page.titleClass%} class="{{page.titleClass}}"{%endif%}>{{ page.title }}</h2>
      {% endif %}
      {% if page.tweet %}
        <amp-twitter width="375"
          height="472"
          layout="responsive"
          data-tweetid="{{ page.tweet }}"
          interactive>
        </amp-twitter>
      {% endif %}
    </amp-story-grid-layer>
  </amp-story-page>
{% endfor %}