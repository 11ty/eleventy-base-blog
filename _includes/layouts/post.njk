---
layout: layouts/base.njk
---

<div class="progress-bar"></div>

<article class="post">
  <h1 id="post-title">
    {{ title }}&ensp;{{ emoji }}
    <div class="wave-divider" style="--emoji-color: {{ emoji | getEmojiColor }};"></div>
  </h1>

  <ul class="post-metadata">
    <li>
      <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
    </li>
    {%- for tag in tags %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li>
        <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
        {%- if not loop.last %}, {% endif %}
      </li>
    {%- endfor %}
  </ul>

  {{ content | safe }}

  {%- if collections.posts or collections.projects %}
    {%- set collection = collections.posts if tags.includes("posts") else collections.projects %}
    {%- set previousPost = collection | getPreviousCollectionItem %}
    {%- set nextPost = collection | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
      <ul class="links-nextprev">
        {%- if previousPost %}
          <li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if nextPost %}
          <li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}
</article>