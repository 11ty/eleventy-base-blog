---
layout: layouts/home.njk
title: "Jackson's CV"
navPhrase: "Welcome to my CV! Here's a glimpse of my professional journey."
---
{% css %}{% include "public/css/cv.css" %}{% endcss %}

{% macro anchorHeader(level, text) %}
  {% set slug = text | lower | replace(" ", "-") | replace(",", "") | replace(".", "") %}
  <h{{ level }} id="{{ slug }}">
    {{ text }}
    <a href="#{{ slug }}" class="header-anchor" aria-label="Permalink to {{ text }}">#</a>
  </h{{ level }}>
{% endmacro %}

<section class="cv-header">
    <h1>{{ cv.header.name }}</h1>
    <p class="cv-tagline">{{ cv.header.tagline }}</p>
</section>

<section class="cv-about-contact">
    <div class="cv-contact">
        <ul class="contact-list">
            {% for item in cv.contact %}
            <li class="contact-item">
                <a href="{{ item.url }}" class="contact-link">
                    <span class="contact-icon">{{ item.icon }}</span>
                    <div class="contact-info">
                        <span class="contact-value">{{ item.value }}</span>
                        <span class="contact-url">{{ item.url | replace("https://", "") }}</span>
                    </div>
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
    <div class="cv-about">
        {% for item in cv.about %}
            <p>{{ item }}</p>
        {% endfor %}
    </div>
</section>

<div class="wave-divider" style="--emoji-color: lightgray;"></div>

{{ anchorHeader(2, "Experience") }}
<div class="timeline">
    {% for job in cv.experience %}
    <div class="timeline-item">
        <h3 class="item-title">{{ job.title }} · {{ job.company }}</h3>
        <div class="item-details">
            {{ job.start_date }} → {{ job.end_date }}
            {% if job.duration %} ({{ job.duration }}){% endif %}
        </div>
        <div class="item-location">{{ job.location }}</div>
        <details>
            <summary>{{ job.description }}</summary>
            <ul>
                {% for responsibility in job.responsibilities %}
                <li>{{ responsibility }}</li>
                {% endfor %}
            </ul>
        </details>
    </div>
    {% endfor %}
</div>

{{ anchorHeader(2, "Education") }}
<div class="timeline">
    {% for edu in cv.education %}
    <div class="timeline-item">
        <h3 class="item-title">{{ edu.degree }}</h3>
        <div class="item-details">{{ edu.institution }} · {{ edu.start_date }} - {{ edu.end_date }}</div>
        <div class="item-location">{{ edu.location }}</div>
        {% if edu.summary %}
        <div class="item-summary">{{ edu.summary }}</div>
        {% endif %}
    </div>
    {% endfor %}
</div>

{{ anchorHeader(2, "Selected Projects") }}
<div class="timeline">
    {% for project in cv.projects %}
    <div class="timeline-item">
        <h3 class="item-title">
            {% if project.url %}
                <a href="{{ project.url }}" target="_blank" rel="noopener noreferrer">{{ project.name }}</a>
            {% else %}
                {{ project.name }}
            {% endif %}
        </h3>
        <div class="item-details">{{ project.tech }}</div>
        <p>{{ project.description }}</p>
    </div>
    {% endfor %}
</div>